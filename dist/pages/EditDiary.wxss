
  .rootcontainer{
    background-color: white;
    width: 100%;
    height: 100%;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
  }

  .bottom_drawer_bg{
    position: fixed;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    background-color: #000;
    opacity: 0.5;
    z-index: 1000;
  }
  .bottom_drawer{
    position: fixed;
    right: 0;
    bottom: 0;
    left: 0;
    height: 300px;
    background-color: green;
    z-index: 2000;
    opacity: 0;
  }


  .open_btn {
    border-radius: 10px;
    margin-top: 44px;
    margin-left: 40px;
    margin-right: 40px;
    height: 50px;
    background-color: #20bb21;
    color: #fff;
    text-align: center;
  }
